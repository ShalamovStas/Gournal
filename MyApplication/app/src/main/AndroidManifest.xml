<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.standartandroid.myapplication3">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:name="MyApplication"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Activity_find"
            android:label="@string/activity_find"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".Activity_Create_file"
            android:label="@string/activity_create_file"
            android:theme="@style/AppTheme.NoActionBar" />


        <activity
            android:name=".Activity_create"
            android:label="@string/activity_create"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".Activity_change"
            android:label="@string/activity_create"
            android:theme="@style/AppTheme.NoActionBar"/>


    </application>

</manifest>